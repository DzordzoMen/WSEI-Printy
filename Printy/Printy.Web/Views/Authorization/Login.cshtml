@{
    ViewData["Title"] = "Logowanie";
    var showError = ViewData["WrongEmailOrPassword"] as String;
}
@model User

<div class="container text-center">
    <h2>Zaloguj się do Printy</h2>

    @if (showError == "True") {
        <div class="alert alert-danger" role="alert">
            Podany email lub hasło jest nieprawidłowe
        </div>
    }

    @using (Html.BeginForm()) {
        <div class="form-group">
            @Html.LabelFor(u => u.Email, "Email")
            @Html.TextBoxFor(u => u.Email, new { @class = "form-control", @type = "email", @required = true })
        </div>
        <div class="form-group">
            @Html.LabelFor(u => u.Password, "Hasło")
            @Html.PasswordFor(u => u.Password, new { @class = "form-control", @required = true })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Zaloguj</button>
        </div>
    }

    <a asp-controller="Authorization" asp-action="Register">Nie masz konta?</a>
</div>