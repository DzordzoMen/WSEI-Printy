                    </div>
                    <div class="card-footer text-right">
                        <a href="#" class="btn btn-outline-success">Add</a>
                    </div>
                </div>
            </div>
            @for (var i = 0; i < 12; i++) {
                <div class="col-12 col-lg-4 col-md-6 col-sm-12 pb-3 pb-md-2 pb-lg-2">
                    <div class="card" style="height: 411px">
                        <div class="card-header">
                            <h3>
                                Card title
                            </h3>
                        </div>
                        <img class="card-img" src="https://picsum.photos/id/180/300/150" alt="Printer example photo" />
                        <div class="card-body">
                            <p>
                                lorem ipsum ip sen sum ben mem nanaw dnawnd andna dnadn andn adn andan dnadn and nadn and nadn and nad n
                            </p>
                        </div>
                        <div class="card-footer text-right">
                            <a href="#" class="btn btn-outline-primary">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>