@{
    ViewData["Title"] = "Drukarki";
    var printers = ViewData["Printers"] as List<Printer>;
}
@model Printer 

<div class="text-center">
    <h1 class="font-weight-bold">
        Printers page
    </h1>

    <br />

    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-4 col-md-6 col-sm-12 pb-3 pb-md-2 pb-lg-2">
                <div class="card" style="height: 430px">
                    <div class="card-header">
                        <h3>
                            Dodaj swoją drukarkę
                        </h3>
                    </div>
                    <img class="card-img" src="https://picsum.photos/id/13/300/150" alt="Alternate Text" />
                    <div class="card-body">
                        <p>
                            Przejdź do formularza udostępniania drukarki innym użytkownikom
                        </p>
                    </div>
                    <div class="card-footer text-right">
                        <a class="btn btn-outline-success" asp-action="AddPrinter">Dodaj</a>
                    </div>
                </div>
            </div>
            @foreach (var printer in printers) {
                <div class="col-12 col-lg-4 col-md-6 col-sm-12 pb-3 pb-md-2 pb-lg-2">
                    <div class="card" style="height: 430px">
                        <div class="card-header">
                            <h3>
                                @printer.Name
                            </h3>
                        </div>
                        <img class="card-img" src="https://picsum.photos/id/180/300/150" alt="Printer example photo" />
                        <div class="card-body">
                            <p>
                                @printer.Description
                            </p>
                        </div>
                        <div class="card-footer text-right">
                            @Html.ActionLink("Szczegóły", "PrinterDetails", new { printerId = printer.Id }, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>