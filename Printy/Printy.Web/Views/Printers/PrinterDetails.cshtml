@model Printy.Web.Models.Printer

@{
    ViewData["Title"] = "View";
}

<h1>Udostępniacz drukarek</h1>

<div>
    <h4>Drukarka</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Opis
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Nr telefonu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Rezerwuj", "TODO", new { printerId = Model.Id }, new { @class = "btn btn-primary" })
</div>

<div>
    <a class="btn btn-outline-primary" asp-action="Index">Wróć do listy</a>
</div>
